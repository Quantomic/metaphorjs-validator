{
    "version": "0.9.7",
    "description": "Form validator",

    "push": [
        "github"
    ],
    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.validator.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                [
                    "src/metaphorjs.validator.js",
                    {
                        "as": "Validator"
                    }
                ],
                "src/jquery/plugin.js"
            ],
            "expose": [
                "Validator"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.validator.npm.js",
            "compile": false,
            "wrap": {
                "exported": true,
                "deferred": true,
                "args": ["window"]
            },
            "files": [
                [
                    "src/metaphorjs.validator.js",
                    {
                        "as": "Validator"
                    }
                ]
            ],
            "omit": [
                "../metaphorjs-observable/src/metaphorjs.observable.js",
                "../metaphorjs-promise/src/metaphorjs.promise.js",
                "../metaphorjs-ajax/src/metaphorjs.ajax.js",
                "../metaphorjs-select/src/metaphorjs.select.js",
                "../metaphorjs-input/src/metaphorjs.input.js",
                "../metaphorjs-input/src/func/getValue.js",
                "../metaphorjs-input/src/func/setValue.js"
            ],
            "require": {
                "metaphorjs-observable": "Observable",
                "metaphorjs-ajax": {
                    "as": "ajax",
                    "args": ["window"]
                },
                "metaphorjs-select": {
                    "as": "select",
                    "args": ["window"]
                },
                "metaphorjs-input": {
                    "as": "Input",
                    "args": ["window"]
                }
            },
            "returns": "Validator"
        },
        "amd": {
            "auto": false,
            "target": "dist/metaphorjs.validator.amd.js",
            "files": [
                [
                    "src/metaphorjs.validator.js",
                    {
                        "as": "Validator"
                    }
                ],
                "src/jquery/plugin.js"
            ],
            "omit": [
                "../metaphorjs-observable/src/metaphorjs.observable.js",
                "../metaphorjs-promise/src/metaphorjs.promise.js",
                "../metaphorjs-ajax/src/metaphorjs.ajax.js",
                "../metaphorjs-select/src/metaphorjs.select.js",
                "../metaphorjs-input/src/metaphorjs.input.js",
                "../metaphorjs-input/src/func/getValue.js",
                "../metaphorjs-input/src/func/setValue.js"
            ],
            "prepend": [
                "src/amd/prepend.js"
            ],
            "define": {
                "name": "metaphorjs-validator",
                "return": "Validator",
                "deps": {
                    "metaphorjs-observable": "Observable",
                    "metaphorjs-ajax": "ajax",
                    "metaphorjs-select": "select",
                    "metaphorjs-input": "Input"
                }
            }
        }
    }
}